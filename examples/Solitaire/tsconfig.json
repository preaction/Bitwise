{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node16",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "*": [
        "*", "node_modules/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": ".build"
  },
  "include": [
    "**/*"
  ]
}
